{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "target": "es6",
    "strict": false,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
